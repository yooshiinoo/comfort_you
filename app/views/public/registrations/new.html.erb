<div class="container">
  <div class="row" style="height:50px;"></div>
  <h2>新規登録のページだよ</h2>
  <div class="row" style="height:20px;"></div>
  <div class="row">
    <div class="col-md-5 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table>
          <div class="field">
            <tr>
              <th><%= f.label "あなたの呼び名を教えて" %></th>
              <td><%= f.text_field :name, autofocus: true, placeholder:"ニックネーム" %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <th><%= f.label "メールアドレスは" %></th>
              <td><%= f.email_field :email, autofocus: true, placeholder:"comfort@you.com" %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <th><%= f.label "パスワードは6~12文字で" %></th>
              <td><%= f.password_field :password, autofocus: true %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <th><%= f.label "パスワード確認するよ" %></th>
              <td><%= f.password_field :password_confirmation, autofocus: true %></td>
            </tr>
          </div>
        </table>
        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row" style="height:50px;"></div>
  <div class="row">
    <div class="col-md-5 mx-auto">
      <p>
        ログインは<%= link_to "こっち", new_user_session_path %> だよ
      </p>
      <p>
        ここから<%= link_to "トップページ", root_path %>に戻れるよ
      </p>
    </div>
  </div>
</div>
