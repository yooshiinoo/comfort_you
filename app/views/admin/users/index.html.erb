<div class="container">
  <h2>ユーザー一覧</h2>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th>ID</th>
            <th>ニックネーム</th>
            <th>投稿数</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.post.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>