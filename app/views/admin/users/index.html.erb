<div class="container">
  <h2>ユーザー一覧</h2>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th>ID</th>
            <th>ニックネーム</th>
            <th>投稿数</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%= link_to admin_user_path(@user.id), class: "nav-link text-dark" do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td><%= user.post.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>