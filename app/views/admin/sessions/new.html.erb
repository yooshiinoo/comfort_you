<div class="container">
  <div class="row" style="height:50px;"></div>
  <h2>わたしは管理者としてログインする</h2>
  <div class="row" style="height:20px;"></div>
  <div class="row">
    <div class="col-md-5.5 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, placeholder:"test@test.com" %>
        </div>
        <div class="row" style="height:20px;"></div>
        <div class="field">
          <%= f.label "パスワード" %><br />
          <%= f.password_field :password, autofocus: true %>
        </div>
        <div class="row" style="height:40px;"></div>
        <div class="mx-auto">
          <%= f.submit "  ログイン  ", class:"btn btn-sm btn-primary" %>
        </div>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>



